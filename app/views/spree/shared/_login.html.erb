<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
    <div id="password-credentials" class="no-radius">
      <div class="form-group">
       作为一个已有账户登录
      </div>
      <div class="form-group">
        <%= f.text_field :login, :class => 'form-control', :tabindex => 1, :placeholder => '登录', autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :class => 'form-control', :tabindex => 2, :placeholder => '密码' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.check_box :remember_me, :tabindex => 3 %>
      <%= f.label :remember_me, Spree.t(:remember_me) %>
    </div>

    <div class="form-group"><%= f.submit Spree.t(:login), :class => 'btn btn-sgcb col-md-12 col-xs-12', :tabindex => 4 %></div>
<% end %>
